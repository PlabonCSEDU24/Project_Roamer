<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    app:umanoDragView="@id/visibleContent"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    app:umanoInitialState="hidden"
    app:umanoPanelHeight="0dp"
    android:maxHeight="560dp"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout">
    <RelativeLayout
        android:id="@+id/visibleContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/quantum_white_100"
         >

        <!-- always visible content -->
        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgMyLocation"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="520dp"
            android:layout_marginLeft="326dp">
            <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_my_location"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:clickable="false"
            android:layout_below="@id/mapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/quantum_white_100"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_below="@id/mapFragment"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:background="@color/quantum_grey300"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/findTransportButton"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="find transport"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/roboto_medium"
                    android:textFontWeight="100"
                    android:background="?selectableItemBackground"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/quantum_white_100"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="6dp">
            <LinearLayout
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/quantum_grey300"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_art"
                    android:padding="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/quantum_grey200">
                    <AutoCompleteTextView
                        android:theme="@style/searchBarTheme"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/search_bar_1"
                        android:elevation="6dp"
                        android:hint="source"
                        android:textCursorDrawable="@color/colorAccent"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingLeft="20dp"
                        android:background="?selectableItemBackground"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/quantum_grey200">
                    <AutoCompleteTextView
                        android:theme="@style/searchBarTheme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/search_bar_2"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimaryDark"
                        android:elevation="6dp"
                        android:hint="destination"
                        android:paddingLeft="20dp"
                        android:textCursorDrawable="@color/colorAccent"
                        android:background="?selectableItemBackground"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/quantum_grey300"/>
        <ListView

            android:id="@+id/queryResultList"
            android:layout_width="match_parent"
            android:layout_height="260dp">

        </ListView>




    </LinearLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>