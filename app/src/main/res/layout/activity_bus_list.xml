<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusListActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <androidx.recyclerview.widget.RecyclerView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/busListRecyclerView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="2dp"
        android:scrollbarThumbVertical="@color/colorPrimaryDark"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarTrackVertical="@color/colorAccent"

        />
    <androidx.cardview.widget.CardView
        android:layout_alignBottom="@id/busListRecyclerView"
        android:layout_alignRight="@+id/busListRecyclerView"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_black_24dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
